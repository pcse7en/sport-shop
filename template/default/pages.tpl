<div class="post">
    <div class="post_title">
        <a href="{POST_LINK}">{POST_TITLE}</a>
    </div>
    <div class="post_block">
        <div class="post_text">
            <div>{POST_TEXT}</div>
            <img src="{POST_IMG}">
        </div>
        <div class="continue">
            [ADD_TO_BASKET]<a href="{ADD_TO_BASKET}"><img src="{ADDRESS}img/add_card.png" style="height: 25px; vertical-align: middle"></a>[/ADD_TO_BASKET]
            [REMOVE_FROM_BASKET]<a href="{REMOVE_FROM_BASKET}"><img src="{ADDRESS}img/remove_from_card.png" style="height: 25px; vertical-align: middle"></a>[/REMOVE_FROM_BASKET]

            [SHOP_EMPTY]<a style="color: red"> اتمام موجودی</a>[/SHOP_EMPTY]
            <a href="#">قیمت : {PRICE}</a>
            <a href="#">موجودی : {COUNT}</a>
        </div>
    </div>
</div>